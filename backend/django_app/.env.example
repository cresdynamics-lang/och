# =================================================================
# DJANGO BACKEND ENVIRONMENT VARIABLES
# =================================================================
# Copy this file to .env and fill in your values

# =================================================================
# DJANGO CORE SETTINGS
# =================================================================
DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=core.settings.development

# =================================================================
# JWT CONFIGURATION
# =================================================================
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
DB_NAME=ongozacyberhub
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# =================================================================
# EMAIL SERVICE CONFIGURATION (Resend)
# =================================================================
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_FROM_NAME=Ongoza CyberHub

# Frontend URL for email links and redirects
FRONTEND_URL=http://localhost:3000

# Token expiry times (in hours)
ACTIVATION_TOKEN_EXPIRY=24
PASSWORD_RESET_TOKEN_EXPIRY=1

# =================================================================
# CORS & SECURITY
# =================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001
CORS_ALLOW_CREDENTIALS=True

# =================================================================
# FASTAPI COMMUNICATION
# =================================================================
FASTAPI_BASE_URL=http://localhost:8001

# =================================================================
# AI / LLM SERVICES
# =================================================================
# Grok API (xAI) - Recipe Engine
GROK_API_KEY_RECIPE=your-grok-api-key-recipe

# Grok API (xAI) - Coaching OS
GROK_API_KEY_COACHING=your-grok-api-key-coaching

# Grok API (xAI) - Fallback/Generic
GROK_API_KEY=your-grok-api-key

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI API (for AI Coach - fallback)
OPENAI_API_KEY=your-openai-api-key
CHAT_GPT_API_KEY=your-openai-api-key

# Llama Fallback Endpoint (Ollama)
LLAMA_ENDPOINT=http://localhost:11434

# AI Coach Configuration
AI_COACH_MODEL=gpt-4o-mini
AI_COACH_TEMPERATURE=0.7

# =================================================================
# BACKGROUND TASKS & CACHING
# =================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =================================================================
# MONITORING & ANALYTICS
# =================================================================
ENABLE_METRICS=False
METRICS_ENABLED=False

# =================================================================
# MFA (MULTI-FACTOR AUTHENTICATION)
# =================================================================
# Key for encrypting TOTP secrets at rest (32 bytes hex or use Fernet key).
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MFA_TOTP_ENCRYPTION_KEY=

# =================================================================
# SMS (MFA & NOTIFICATIONS)
# For testing use Textbelt (https://textbelt.com); for production use Twilio.
# =================================================================
# Provider: textbelt | twilio
SMS_PROVIDER=textbelt
# Textbelt (testing) - get free key at https://textbelt.com
TEXTSMS_API_KEY=your-textbelt-api-key
# Twilio (production)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# =================================================================
# DEVELOPMENT SETTINGS
# =================================================================
LOG_LEVEL=INFO
ENABLE_DEBUG_TOOLBAR=False
