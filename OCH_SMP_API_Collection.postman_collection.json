            "body": {
              "mode": "raw",
              "raw": "{\n    \"program\": \"{{program_id}}\",\n    \"name\": \"Defensive Security Track\",\n    \"key\": \"defensive-security\",\n    \"track_type\": \"primary\",\n    \"description\": \"Focus on defensive cybersecurity strategies and incident response\",\n    \"competencies\": {\n        \"core\": [\"Threat Detection\", \"Incident Response\", \"Security Monitoring\"],\n        \"advanced\": [\"Threat Hunting\", \"Forensics\", \"SIEM Management\"]\n    },\n    \"missions\": [\"mission-001\", \"mission-002\", \"mission-003\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/tracks/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tracks", ""]
            }
          }
        },
        {
          "name": "List Tracks",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/tracks/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tracks", ""],
