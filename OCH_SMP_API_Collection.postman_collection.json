    {
      "name": "Track Management API",
      "description": "Track creation and management within programs",
      "item": [
        {
          "name": "Create Track",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('track_id', response.id);",
                  "    pm.test('Track created successfully', () => {",
                  "        pm.expect(response.id).to.exist;",
                  "        pm.expect(response.name).to.exist;",
                  "        pm.expect(response.key).to.exist;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
